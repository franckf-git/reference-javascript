<% include header %>

<form class="" action="/" method="post">
  <div class="form-group">
    <label for="message">Message :</label>
    <textarea class="form-control" rows="5" id="message" name="message"></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-info">
    <b class="spinner-border spinner-grow-sm"></b> Envoyer
  </button>
</form>
<br>
<hr>
<br>
<h4>Commentaires :</h4>

<% for (const message of messages) { %>
  <div class="card">
    <div class="card-body">
      <a href="/comment/<%= message.id %>">
        <img src="/assets/user.png" class="rounded-circle" style="width:32px;height:32px;" alt="user icon">
      </a>
      <%= message.content %>
      <i class="small"> <%= message.created_at.fromNow() %> </i>
    </div>
  </div>
  <% } %>

  <% include footer %>
