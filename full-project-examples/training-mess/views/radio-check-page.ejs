<% include header %>

<h1><%= title %></h1>

<hr>
<br>

<form action="/radcheck" method="post">
  <fieldset class="form-group">
    <div class="row">
      <legend class="col-form-label col-sm-2 pt-0">Radios</legend>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1"
          <% if (config.choixRadio === 'option1') { %>
            checked
          <% } %> >
          <label class="form-check-label" for="gridRadios1">
            First radio
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2"
          <% if (config.choixRadio === 'option2') { %>
            checked
          <% } %> >
          <label class="form-check-label" for="gridRadios2">
            Second radio
          </label>
        </div>
        <div class="form-check disabled">
          <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="option3" disabled>
          <label class="form-check-label" for="gridRadios3">
            Third disabled radio
          </label>
        </div>
      </div>
    </div>
  </fieldset>
  <div class="form-group row">
    <div class="col-sm-2">Checkbox1</div>
    <div class="col-sm-10">
      <div class="form-check">
        <div class="custom-control custom-switch">
          <input class="custom-control-input" type="checkbox" name="gridCheck1" id="gridCheck1"
        <% if (config.choixBox1 === 'on') { %>
          checked
        <% } %> >
          <label class="custom-control-label" for="gridCheck1">Example checkbox1</label>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">Checkbox2</div>
    <div class="col-sm-10">
      <div class="form-check">
        <div class="custom-control custom-switch">
          <input class="custom-control-input" type="checkbox" name="gridCheck2" id="gridCheck2"
        <% if (config.choixBox2 === 'on') { %>
          checked
        <% } %> >
          <label class="custom-control-label" for="gridCheck2">Example checkbox2</label>
        </div>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-10">
        <br><br>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
      </div>
    </div>
</form>

<form action="/radcheck/resetconfig" method="post">
  <div class="form-group row">
    <div class="col-sm-10">
      <br><br>
      <button type="submit" class="btn btn-warning">Reset</button>
    </div>
  </div>
</form>

<br>
<hr>

<% include footer %>
