<% include ../header %>
<h1><%= title %></h1>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <% include ../messages/erreurs %>
      <% include ../messages/success %>
      <form action="/authentificationsession/enregistre" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value=<% if ( typeof email != 'undefined' ) { %> " <%= email %> " <% } else { %> "" <% } %> />
        </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="••••••••"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
            <div class="form-group">
              <label for="password2">Confirm Password</label>
              <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
              <div class="form-group">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="cgu" name="cgu">
                  <label class="form-check-label" for="cgu"></label>
                  <a href="https://fr.wikipedia.org/wiki/Conditions_g%C3%A9n%C3%A9rales_d%27utilisation">j'accepte les CGU<a>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account ? <a href="/authentificationsession/login">Login</a></p>
                </div>
              </div>
            </div>


            <% include ../footer %>
